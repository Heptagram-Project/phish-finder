{
  "name": "phish-scanner",
  "version": "0.0.3",
  "description": "A tool to detect phishing or scam urls. It uses a list of known phishing urls and a list of known scam urls to detect phishing or scam urls.",
  "main": "src/index.ts",
  "author": "Jasper Mayone <jasper@jaspermayone.com>",
  "license": "EPL-2.0",
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "phishing",
    "phish",
    "fishing scanner",
    "phish scanner"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "release": "standard-version && git push --follow-tags && npm publish"
  },
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "jest": "^29.2.2",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.4"
  },
  "bugs": {
    "url": "https://github.com/Heptagram-Project/phish-scanner/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Heptagram-Project/phish-scanner.git"
  },
  "homepage": "https://github.com/Heptagram-Project/phish-scanner#readme"
}
